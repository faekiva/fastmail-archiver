{
	"name": "fastmail-archiver",
	"version": "0.0.1",
	"description": "JMAP application for real-time email movement tracking and archiving using Fastmail",
	"type": "module",
	"scripts": {
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"test": "jest",
		"build": "tsdown",
		"start": "node --enable-source-maps ./dist/main.js",
		"dev": "tsdown && node --enable-source-maps dist/main.js",
		"docker:build": "docker build -t fastmail-archiver .",
		"docker:run": "docker run --rm -e FASTMAIL_TOKEN=\"$FASTMAIL_TOKEN\" fastmail-archiver",
		"docker:dev": "npm run docker:build && npm run docker:run"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/faekiva/fastmail-archiver.git"
	},
	"author": "faekiva",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/faekiva/fastmail-archiver/issues"
	},
	"homepage": "https://github.com/faekiva/fastmail-archiver#readme",
	"devDependencies": {
		"@types/jest": "^29.5.12",
		"eslint": "^9.9.1",
		"eslint-config-codely": "^4.2.0",
		"jest": "^29.7.0",
		"ts-node-dev": "^2.0.0",
		"tsdown": "^0.15.2",
		"typescript": "^5.5.4"
	},
	"dependencies": {
		"eventsource-client": "^1.1.4",
		"jmap-jam": "^0.11.0"
	}
}
